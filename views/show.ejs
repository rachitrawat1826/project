<% layout("boilerplate") %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <h3 class="mb-4">
                    <%= listing.title %>
                </h3>

                <div class="card shadow rounded-3 listing-card">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" class="card-img-top show-img rounded-top" alt="listing_image">

                    <div class="card-body">
                        <p>Owned by <i><%= listing.owner ? listing.owner.username : "Unknown" %></i></p>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        <p class="card-text">Price: &#8377;
                            <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %>
                        </p>
                        <p class="card-text">Location:
                            <%= listing.location %>
                        </p>
                        <p class="card-text">Country:
                            <%= listing.country %>
                        </p>
                    </div>

                    <% if(currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

        <!-- Review Form -->
        <div class="col-8 offset-2 mt-4">
            <% if(currUser){ %>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                    <fieldset class="starability-slot">
                        <legend>Rate this listing:</legend>
                        <% for(let i=1; i<=5; i++){ %>
                            <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>" />
                            <label for="rate<%= i %>"><%= i %> star</label>
                            <% } %>
                    </fieldset>

                    <div class="mb-3 mt-3">
                        <label for="comments" class="form-label">Comments</label>
                        <textarea required name="review[comment]" id="comments" cols="30" rows="5" class="form-control"></textarea>
                        <div class="invalid-feedback">Please submit some comments for the review</div>
                    </div>

                    <div class="mb-3 mt-3">
                        <button class="btn btn-outline-dark">Submit</button>
                    </div>
                </form>
                <% } %>
        </div>

        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">
            <% for (let review of listing.reviews){ %>
                <div class="card col-6 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= review.author ? review.author.username : "Anonymous" %>
                        </h5>
                        <p class="starability-result" data-rating="<%= review.rating %>">Rated:
                            <%= review.rating %> stars</p>
                        <p class="card-text">
                            <%= review.comment %>
                        </p>
                    </div>
                    <% if(currUser && review.author && currUser._id.toString() === review.author._id.toString()) { %>
                        <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <% } %>
                </div>
                <% } %>
        </div>
    </div>