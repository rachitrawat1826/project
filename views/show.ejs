<% layout("boilerplate") %>

    <div class="container mt-5">
        <!-- adds spacing from top -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- centers the card with proper width -->
                <h3 class="mb-4">
                    <%= listing.title %>
                </h3>

                <div class="card shadow rounded-3 listing-card">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" class="card-img-top show-img rounded-top" alt="listing_image">

                    <div class="card-body">
                        <h5 class="card-title">
                        </h5>
                        <p>Owned by <i> <%= listing.owner.username %></i></p>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        <p class="card-text">
                            <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %>

                        </p>
                        <p class="card-text">
                            <%= listing.location %>
                        </p>
                        <p class="card-text">
                            <%= listing.country %>
                        </p>
                    </div>
                    <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                        <% }    %>
                </div>
            </div>
        </div>

        <div class="col-8 offset-3">
            <% if(currUser){%>
                <br>
                <h4>leave a Review</h4>
                <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                    <fieldset class="starability-slot">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>

                    <div class="mb-3 mt-3">
                        <label for="comments" class="form-label">Comments</label>
                        <textarea required name="review[comment]" id="comments" cols="30" rows="5" class="form-control"></textarea>
                        <div class="invalid-feedback">please sumbit some comments for Review</div>
                    </div>
                    <div class="mb-3 mt-3">
                        <button class="btn btn-outline-dark">submit</button>
                    </div>
                </form>
                <%}%>
        </div>

        <hr>
        <p><b>All Rreviews</b></p>
        <div class="row">
            <% for (review of listing.reviews){%>
                <div class="card col-6  mb-3">
                    <div class="card-body">
                        <h5 class="class-title">
                            <%=review.author.username%>
                        </h5>
                        <p class="starability-result" data-rating="3">
                            Rated: 3 stars
                        </p>
                        <p class="card-text">
                            <%=review.comment%>
                        </p>
                        <p class="card-text">
                            <%=review.rating%>star
                        </p>

                    </div>
                    <form class="mb-3" action="/listings/<%=listing.id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>

                <% }%>
        </div>


    </div>
    <!-- card-footer d-flex justify-content-between  -->