<% layout("boilerplate") %>
    <h1>All Listings</h1>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of listings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                <div class="card col listing-card shadow-sm mb-3">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">

                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b><br> &#8377;
                            <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %>
                        </p>
                        <p class="text-muted small">
                            <%= listing.location %>,
                                <%= listing.country %>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>